<div>
  <% flash.each do |key, value| %>
    <%= flash[:notice] %>
  <% end %>
</div>

<%= render 'user_error', user: @user %>

<%= render 'user_info', user: @user %>

<%= render 'user_edit_link', user: @user %>

<%= render 'books/new_book', book: @book %>

</div>

<div class="col-md-8 offset-md-1">
  <h2 class="mt-3">Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th class="col-4"></th>
        <th class="col-3 pl-1">本のタイトル</th>
        <th class="col-3">感想</th>
        <th class="col-1"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path do %>
            <%= image_tag book.user.get_profile_image(80,80), class: "w-10" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
