<h2>User info</h2>

<%= render 'user_error', user: @user %>


<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, id:"inputName" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <label for="inputIntroduction">自己紹介文</label>
  <%= f.text_area :introduction, id:"inputIntroduction" %>
  <%= f.submit "Update User" %>
<% end %>