<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
      <h2>User info</h2>
      <%= render 'user_error', user: @user %>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">名前</label><br>
        <%= f.text_field :name, id:"user_name", class: "form-control mb-n4" %><br>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*",class: "w-100" %><br>
      </div>
      <div class="form-group">
        <label for="user_introduction">自己紹介文</label><br>
        <%= f.text_area :introduction, id:"user_introduction", class: "form-control mb-n2" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>